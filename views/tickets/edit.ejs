<%- include('../includes/header')%>
<%- include('../includes/navbar')%>
<%- include('../includes/sidebar')%>
<%- include('../includes/start_content_header')%>
  <div class="col-sm-6">
      <h1 class="m-0">Create ticket</h1>
  </div><!-- /.col -->
  <div class="col-sm-6">
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">Edit ticket Page</li>
    </ol>
  </div><!-- /.col -->

<%- include('../includes/end_content_header')%>

<%- include('../includes/start_content')%>


<div class="col-12">
	<div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Edit ticket</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <%if(errors){%>
                <%errors.forEach(error => {%>
                <p style="color:red;"><%= error.msg%></p>
                <%})%>
              <%}%>
              <form action="/tickets/update/<%=ticket.id%>" method="POST">
                <div class="card-body">
                <div class="form-group">
                    <label>Project</label>
                    <select class="form-control" name="projectId">
                      <%projects.forEach(project => {%>
                        <option value="<%=project.id%>"><%=project.name%></option>
                      <%})%>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="title">title</label>
                    <input type="text" class="form-control" id="title" name="title" value="<%=ticket.title%>">
                  </div>
                  <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="description" class="form-control"><%=ticket.description%></textarea>
                  </div>
                  <div class="form-group">
                    <label>Assign developer</label>
                    <select class="form-control" name="developer">
                      <%developers.forEach(developer => {%>
                        <option value="<%=developer.id%>"><%=developer.name%></option>
                      <%})%>
                    </select>
                  </div>
                  <div class="form-group">
                    <label>Status</label>
                    <select class="form-control" name="status">
                      <option value="open">Open</option>
                      <option value="in progress">In progress</option>
                      <option value="close">Close</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label>Type</label>
                    <select class="form-control" name="type">
                      <option value="bug">Bug</option>
                      <option value="feature request">Feature request</option>
                      <option value="document request">Document request</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label>piorty</label>
                    <select class="form-control" name="piorty">
                      <option value="high">High</option>
                      <option value="medium">Medium</option>
                      <option value="low">Low</option>
                    </select>
                  </div>
                <!-- /.card-body -->
                <input type="hidden" name="_csrf" value="<%= _csrf %>">
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Edit</button>
                </div>
              </form>
            </div>

</div>
<%- include('../includes/end_content')%>

<%- include('../includes/footer')%>