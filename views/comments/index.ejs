<%- include('../includes/header')%>
<%- include('../includes/navbar')%>
<%- include('../includes/sidebar')%>
<%- include('../includes/start_content_header')%>
<div class="col-sm-6">
      <h1 class="m-0">comments</h1>
  </div><!-- /.col -->
  <div class="col-sm-6">
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">comments Page</li>
    </ol>
  </div><!-- /.col -->
<%- include('../includes/end_content_header')%>

<%- include('../includes/start_content')%>


<div class="col-12">
	<div class="card">
	<%if(comments) {%>
		<div class="card-header"></div>
		<div class="card-body">
			<table class="table table-bordered">
			    <thead>
			       <tr>
			            <th>Comment</th>
			            <th>Ticket</th>
			            <th>Edit</th>
			            <th>Delete</th>
			        </tr>
			   </thead>
			   <tbody>
			   	<% comments.forEach(comment => {%>
			       <tr data-widget="expandable-table" aria-expanded="false">
			            <td><%= comment.message%></td>
			            <td><%= comment.ticket.title%></td>
			            <td>
			            	<a href="/comments/edit/<%=comment.id%>" class="btn btn-primary btn-sm">Edit</a>
			            </td>
			            <td>
			            	<form action="/comments/delete/<%=comment.id%>" method='POST'>
								<input type="hidden" name="_csrf" value="<%= _csrf %>">
			            		<button type="submit" class="btn btn-sm btn-danger">
			            			Delete</button>
			            	</form>
			            </td>
					</tr>
			     <%})%>
			   </tbody>
			</table>
		</div>
	<%}%>
	</div>
</div>
<%- include('../includes/end_content')%>

<%- include('../includes/footer')%>